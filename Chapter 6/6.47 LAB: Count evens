#include <iostream>

using namespace std;

int CountEvens(int one, int two, int three, int four) 
{
   int total = 0;
   
   one % 2 == 0 ? total++ : total;
   two % 2 == 0 ? total++ : total;
   three % 2 == 0 ? total++ : total;
   four % 2 == 0 ? total++  : total;
   
   return total;
}

int main() 
{
   int result;
   
   result = CountEvens(3, 1, 4, 12);
   
	cout << "Total evens: " << result << endl; 

   return 0;
}
